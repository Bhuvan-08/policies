{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "flexvolume-test"
  },
  "spec": {
    "containers": [
      {
        "name": "nginx",
        "image": "nginx",
        "volumeMounts": [
          {
            "name": "test-vol",
            "mountPath": "/data"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "test-vol",
        "flexVolume": {
          "driver": "example/allowed-driver",
          "fsType": "ext4"
        }
      }
    ]
  }
}
